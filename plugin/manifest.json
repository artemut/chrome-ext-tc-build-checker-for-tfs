{
  "manifest_version": 2,

  "name": "TeamCity build checker for TFS pull requests",
  "description": "This extension shows a status of a corresponding TeamCity build on the TFS pull request pages",
  "version": "1.0",

  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "http://*/",
    "https://*/"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": [ "scripts/background.js", "scripts/tfsClient.js", "scripts/teamCityClient.js" ],
    "persistent": false
  },

  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "css": [ "styles/injection.css" ],
    "js": [ "external/jquery-3.2.1.min.js", "scripts/tfsPageAdapter.js", "scripts/injector.js" ]
  }],

  "web_accessible_resources": [
    "images/*"
  ],

  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "TeamCity build status",
    "default_popup": "popup.html"
  }
}